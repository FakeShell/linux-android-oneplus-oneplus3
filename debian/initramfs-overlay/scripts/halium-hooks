# Initramfs hooks for OnePlus 3/3T

halium_hook_setup_touchscreen() {
    echo "$(cat /sys/class/leds/lcd-backlight/max_brightness)" > /sys/class/leds/lcd-backlight/brightness
}

halium_hook_teardown_touchscreen() {
    # Setting brightness to 0 will cause phosh to boot with a completely black screen
    #echo 0 > /sys/class/leds/lcd-backlight/brightness
}

